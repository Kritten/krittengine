{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "demo/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
